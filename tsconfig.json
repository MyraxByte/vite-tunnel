{
    "compilerOptions": {
      "target": "es2018",
      "jsx": "preserve",
      "lib": ["esnext", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": [
        "vite/client"
      ],
      "allowJs": true,
      "strict": true,
      "strictNullChecks": true,
      "noImplicitAny": false,
      "esModuleInterop": true
    },
    "exclude": [
      "**/src/devtools/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/**/*.js"
    ]
  }